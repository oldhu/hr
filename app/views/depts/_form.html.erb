<%= form_for(@dept, :html => { :class => "form-horizontal", :id => "current_form" } ) do |f| %>
	<fieldset>
			<div class="control-group">
				<%= f.label :name, :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :name %>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">Parent Dept</label>
				<div class="controls">
					<%= f.select :parent_id, all_depts %>
				</div>
			</div>
	</fieldset>
<% end %>
