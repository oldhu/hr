$(document).ready(function() {
    $('#title_table').dataTable();

    $('#new_level_link').click(function() {
		openDialog("<%= new_level_path %>", 500, "New Level");
		return false;
    });

    $('#new_title_link').click(function() {
		openDialog("<%= new_title_path %>", 550, "New Title");
		return false;
    });

    $('.edit_level_link').click(function(event) {
		openDialog(event.target.href, 500, "Edit Level");
		return false;
    });

    $('.edit_title_link').click(function(event) {
		openDialog(event.target.href, 550, "Edit Title");
		return false;
    });
});
